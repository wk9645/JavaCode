import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

public class ByteCopy {
	
	public static void main(String[] args) throws IOException{
		
		BufferedOutputStream bos = new BufferedOutputStream(new FileOutputStream("F:\\wk\\banana.jpg"));
		BufferedInputStream bis = new BufferedInputStream(new FileInputStream("D:\\Í¼Æ¬×ÊÔ´\\banana.jpg"));
		
		int len=0;
		byte[] buf = new byte[1024];
				
		while((len=bis.read(buf,0,len))!=-1){
			bos.write(len);
		}
		if(bos!=null)
			bos.close();
		if(bis!=null)
			bis.close();
	}
}
