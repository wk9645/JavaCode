	@Override
	public int call(int minCount, MobileCard card) {
		
		int realTalkTime = card.getRealTalkTime();
		int time = 0;
		
		if(realTalkTime > talkTime){
			
			time = realTalkTime - talkTime;
			
			
		}
		return talkTime;
	}

	@Override
	public int send(int count, MobileCard card) {
		
		
		
		return 0;
	}

}
