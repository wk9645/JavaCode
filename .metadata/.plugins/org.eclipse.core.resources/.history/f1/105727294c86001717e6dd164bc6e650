import java.util.Arrays;

public class Test {

	
	public static void main(String[] args) {
		
		int[] arr = new int[]{4,7,1,8,3,9,2,6,5};
		
		//1°¢√∞≈›≈≈–Ú
//		puppleSort(arr);
		
		//2°¢ºÚµ•—°‘Ò≈≈–Ú
//		select(arr);
		
		//3°¢÷±Ω”≤Â»Î≈≈–Ú
//		insert(arr);
		
		//4°¢øÏÀŸ≈≈–Ú
//		sort(arr, 0, arr.length-1);
		
		//5°¢œ£∂˚≈≈–Ú
		shell(arr);
		System.out.println(Arrays.toString(arr));
